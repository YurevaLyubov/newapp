{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true
    },
    "extends": [
        "react-app",
        "react-app/jest"
    ],
    "plugins": [
        "babel",
        "import",
        "jsx-a11y",
        "react",
        "react-hooks",
        "prettier"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "react/jsx-indent": ["warn", 4],
        "react/jsx-indent-props": ["warn", 4],
        "indent": [
            "warn",
            4,
            {
                "ignoredNodes": [
                    "ConditionalExpression"
                ],
                "SwitchCase": 1
            }
        ],
        "consistent-return": "off",
        "react/jsx-props-no-spreading": "off",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "import/prefer-default-export": "off",
        "react-hooks/exhaustive-deps": "off",
        "import/no-cycle": "off",
        "prettier/prettier": "error"
    }
}
